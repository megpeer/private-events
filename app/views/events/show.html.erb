
<h3><%= @event.title %></h3>
Host: <%= @event.user.username %><br>
Date: <%= @event.date %><br>
Location: <%= @event.location %><br>
Info: <%= @event.body %><br>

<%= link_to "home", events_path %>
<% if @event.user_id = current_user %>
<%= link_to "edit", edit_event_path %>
<%= link_to "delete", event_path(@event), 
    data: { turbo_method: "delete", turbo_confirm: "click OK to delete event" }%>
<%# elsif %>
<%#!current_user.attendee_id.include?(@event.id) %>
<%= link_to "attend", create_attendance_path(:attendee_id=>current_user.id, :attended_event_id=>@event.id), data: { turbo_method: "post" } %>
<%= link_to "bail out", attendance_path(:attendee_id=>current_user.id, :attended_event_id=>@event.id), 
    data: { turbo_method: "delete", turbo_confirm: "click OK to bail out of event" }%>
<% end %>